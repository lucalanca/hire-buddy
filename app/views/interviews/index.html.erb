<table>
  <thead>
    <tr>
      <th>Position</th>
      <th>Candidate</th>
      <th>Interviewer</th>
      <th>State</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @interviews.each do |interview| %>
      <tr>
      	<td><%= interview.position.name %></td>
      	<td><%= interview.candidate.name %></td>
        <td><%= interview.interviewer.name %></td>
      	<td><%= interview.state %></td>
        <td><%= link_to 'Show', interview %></td>
        <td><%= link_to 'Edit', edit_interview_path(interview) %></td>
        <td><%= link_to 'Destroy', interview, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  

<%= link_to 'New Interview', new_interview_path, class: "btn-flat c4" %>
